            <li><a href="{{path('home',{subjectId:Menu.denMenu}) }}">{{Menu.denMenu}}</a></li>
          {% endfor %}
          </ul>
          
      </div>
        </div>
    </header>
    <div class="container main">
        <div class="col-md-3 left-col hidden-xs hidden-sm">
            <aside class="left-block">
                <div class="square-block">
                    <div class="inner">

                        <h4>Categories</h4>
                        <ul class="list-unstyled leftmenu">
                            <li><a href="{{ path('home') }}">All</a></li>
                           
                    
          {% for Menu in data.menu %}    
            <li><a href="{{path('home',{subjectId:Menu.denMenu}) }}">{{Menu.denMenu}}</a></li>
          {% endfor %}
          </ul>
                    </div>
                </div>
                <div class="square-block" id="most-popular">
                  <div class="square-block" id="most-popular">
                   <div class="inner">
                      <h5 class="middle-header blue-text">Most Popular</h5>
                        <ul class="list-unstyled">
                            {% if data.popular is defined %}
                            {% for popular in data.popular %}
                               <li>
                                 <div class="pull-right img-placeholder">
                                <a href="{{path('info',{i:popular.C}) }}">   
                          {%if popular.LogoImage is  empty %}
                           <img src="{{ asset('images/logo-placeholder.jpg')}}" alt="post" /> 
                             {% else %}
            <img src="{{ asset('images/')}}{{popular.LogoImage}}" class="img-responsive" alt="popular">
                 {%endif%}
                                
                                </a>
                                </div>
                                <a href="{{path('info',{i:popular.C}) }}">{{popular.Nm}}</a>
                              </li>
                            {% endfor %} 
                            {%endif%}
                            
                          </ul>
                    </div>
                </div>
                </div>
            </aside>
        </div>
 <div class="col-md-9 content">
     {% for infocom in data.info %}
    <div class="singe-page company-articles square-block col-xs-12">
        <div class="inner">
              <header><h1 class="middle-header blue-text">{{infocom.Nm}}</h1></header>
                <div class="content">
                                            <div class="article-item">
                            <div class="img-placeholder pull-left">
                   {%if infocom.Picture is  empty %}
                           <img src="{{ asset('images/logo-placeholder.jpg')}}" alt="post" /> 
                             {% else %}
          <img src="{{ asset('images/')}}{{infocom.Picture}}" alt="{{infocom.Nm}}"/>
                 {%endif%}
                                
                                                            </div>
                            <h3 class="post-title">
                                <a href="{{path('infopage',{id:infocom.C}) }}">
                                    {{ infocom.Nm }}

                                </a>
                            </h3>
                            <p class="article-description">{{ infocom.description|slice(0,20)|raw}}
</p>
                            <p class="pull-left count">Views&nbsp;{{infocom.views}}</p>
                            <a class="btn btn-default btn-blue-solid text-uppercase pull-right" href="{{path('infopage',{id:infocom.C}) }}">full article</a><p></p>
                        </div>
                                    </div>
                    </div>
    </div>
