<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}BinaSmartShopOnline{% endblock %}</title>

    <!-- Bootstrap -->
    <link href="{{ asset('bundles/b2bblog/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/b2bblog/css/style.css') }}" rel="stylesheet">
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="{{ asset('bundles/b2bblog/js/bootstrap.min.js') }}"></script>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed' rel='stylesheet' type='text/css'>
    {% block externaljs %}{% endblock %}
    <script>
        {% block headjs %}{% endblock %}
    </script>
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <header class="header">
        <div class="container">
            <a href="{{ path("home") }}" class="">
                <img src="{{ asset('bundles/b2bblog/images/logo.svg') }}" alt="logo" class="header-logo" />
            </a>
        </div>
    </header>
    <div class="container">
        <aside class="col-xs-3">
            <div class="square-block">
                <div class="inner">
                    <form class="search-form"><input
                            type="text" name="search" placeholder="Search" /><button><span
                                    class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                    </form>
                    <h4>Categories</h4>
                    <ul class="list-unstyled">
                        {% for subject in data.subjects %}
                        <li><a href="{{ path('home', { subjectId: subject.id }) }}">{{ subject.description }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="square-block" id="most-popular">
                <div class="inner">
                    <h4>Most Popular</h4>
                    <ul class="list-unstyled">
                        {% for post in data.popular %}
                        <li><div class="pull-right img-placeholder">{% if post.image %}
                                <a href="{{ path('show_client_article', {'articleId': post.id}) }}">
                                    <img src="{{ post.image }}" class="img-responsive" alt="{{ post.title }}" />
                                </a>{% endif %}
                            </div>
                            <a href="{{ path('show_client_article', {'articleId': post.id}) }}">{{
                                post.title|length > 65 ? "post.title|slice(0, 65)..." : post.title
                            }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </aside>
        <div class="col-xs-9 content">
            {% block content %}{% endblock %}
        </div>
    </div>
    <footer class="footer">
        <div class="container">
            <div class="row">
                <p class="text-center">Bina Smart Business &copy;</p>
            </div>
        </div>
    </footer>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="js/bootstrap.min.js"></script>
<script>
    $('a[href="'+ window.location.pathname +'"]').addClass('active');
</script>
</body>
</html>
