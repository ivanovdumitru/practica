{% extends 'B2BBlogBundle:template:base.html.twig' %}
{% block title %}
    {{ parent() }}
    {% include 'B2BBlogBundle:partials:title.html.twig' %}
{% endblock %}
{% block externaljs %}
    <script src="{{ asset('bundles/b2bblog/js/debug-dump.js') }}" type="text/javascript"></script>
{% endblock %}
{% block content %}
<div class="row">
    {% if data.articles is defined %}
    <dl>
        {% for article in data.articles %}
            <dt>{{ article.title }}</dt>
            <dd>
                {{ article.description }}
                <p class="text-right">
                    <a href="{{ path("show_client_article", {"articleId": article.id }) }}">full article</a>
                </p>
                <p class="text-muted small" style="float: left">
                    <a href="{{ path('client_articles', { 'companyId': article.company }) }}">{{ article.company__nm }}</a>
                </p>
                <p class="text-muted small"  style="float: right">{{ article.created|date("Y F jS \\a\\t g:ia") }}</p>
                {% include 'B2BBlogBundle:partials:debug.html.twig' with { 'data': article } %}
                <hr style="clear: both" />
            </dd>
        {% endfor %}
        {% endif %}
